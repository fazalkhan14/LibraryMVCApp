@model IEnumerable<LibraryMVCApp.Models.Student>
@{
    ViewData["Title"] = "List of Students";
}

<h1>@ViewData["Title"]</h1>

@{
    if(Model.Count() > 0)
    {
        <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Department</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.DepartmentName</td>
                    <td>@Html.ActionLink("Delete","Delete","Student", new { id=student.Id })</td>
                    <td>@Html.ActionLink("Edit","EditStudent","Student", new { id=student.Id })</td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <h3>No Students added</h3>
    }
}

@Html.ActionLink("Add Student","AddStudent","Student")