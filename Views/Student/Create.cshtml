@model LibraryMVCApp.Models.Student


<h1>Add New Student</h1>

@using (Html.BeginForm("AddStudentForm", "Student", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DepartmentName)
        @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BorrowerId)
        @Html.EditorFor(model => model.BorrowerId, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <input type="submit" value="Create" />
    
}



