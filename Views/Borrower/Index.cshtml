@model IEnumerable<LibraryMVCApp.Models.Borrower>
@{
    ViewData["Title"] = "List of Borrowers";
}

<h1>@ViewData["Title"]</h1>

@{
    if(Model.Count() > 0)
    {
        <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Borrower On</th>
                <th>Returned On</th>
                <th>ReturnDate</th>
                <th>Book</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var borrower in Model)
            {
                <tr>
                    <th>@borrower.Id</th>
                    <th>@borrower.BorrowedOn</th>
                    <th>@borrower.ReturnedOn</th>
                    <th>@borrower.ReturnDate</th>
                    <th>@borrower.books.ToString()</th>
                    <td>@Html.ActionLink("Delete","Delete","Borrower", new { id=borrower.Id })</td>
                    <td>@Html.ActionLink("Edit","EditBorrower","Borrower", new { id=borrower.Id })</td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <h3>No Students added</h3>
    }
}

@Html.ActionLink("Add Borrower","AddBorrower","Borrower")